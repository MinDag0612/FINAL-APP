<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/spacing_md"
    android:background="?attr/colorSurface">

    <!-- Handle nhỏ ở trên cho giống bottom sheet chuẩn -->
    <View
        android:layout_width="36dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/spacing_sm"
        android:background="@drawable/bg_bottomsheet_handle" />

    <TextView
        android:id="@+id/tv_bottom_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chọn loại vé &amp; số lượng"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_bottom_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xs"
        android:text="Chọn số vé cho từng hạng, tối đa theo số vé còn lại."
        android:textSize="13sp"
        android:textColor="?attr/colorOnSurfaceVariant" />

    <!-- Hàng Premium -->
    <LinearLayout
        android:id="@+id/row_premium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_md"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ticket_label_premium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Premium"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_ticket_desc_premium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:text="Ghế hàng A • Trải nghiệm tốt nhất"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <TextView
                android:id="@+id/tv_ticket_remaining_premium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:text="Còn 0 vé"
                android:textSize="12sp"
                android:textColor="?attr/colorPrimary" />

            <TextView
                android:id="@+id/tv_ticket_price_premium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:text="0 ₫"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Controls -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ticket_minus_premium"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                android:text="-"
                android:textSize="16sp"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/tv_ticket_qty_premium"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textStyle="bold"
                android:textSize="16sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ticket_plus_premium"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                android:text="+"
                android:textSize="16sp"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>

    <!-- Hàng VIP -->
    <LinearLayout
        android:id="@+id/row_vip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_sm"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ticket_label_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIP"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_ticket_desc_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:text="Ghế hàng B • Cân bằng giữa view &amp; giá"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <TextView
                android:id="@+id/tv_ticket_remaining_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:text="Còn 0 vé"
                android:textSize="12sp"
                android:textColor="?attr/colorPrimary" />

            <TextView
                android:id="@+id/tv_ticket_price_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:text="0 ₫"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Controls -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ticket_minus_vip"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                android:text="-"
                android:textSize="16sp"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/tv_ticket_qty_vip"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textStyle="bold"
                android:textSize="16sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ticket_plus_vip"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                android:text="+"
                android:textSize="16sp"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>

    <!-- Hàng General -->
    <LinearLayout
        android:id="@+id/row_general"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_sm"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ticket_label_general"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="General"
                android:textStyle="bold"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_ticket_desc_general"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:text="Ghế hàng C–D • Giá dễ tiếp cận"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <TextView
                android:id="@+id/tv_ticket_remaining_general"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:text="Còn 0 vé"
                android:textSize="12sp"
                android:textColor="?attr/colorPrimary" />

            <TextView
                android:id="@+id/tv_ticket_price_general"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:text="0 ₫"
                android:textStyle="bold"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Controls -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ticket_minus_general"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                android:text="-"
                android:textSize="16sp"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/tv_ticket_qty_general"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textStyle="bold"
                android:textSize="16sp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ticket_plus_general"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:padding="0dp"
                android:text="+"
                android:textSize="16sp"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_confirm_ticket_types"
        style="@style/App_Button_Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_lg"
        android:text="Tiếp tục chọn chỗ ngồi"
        android:textAllCaps="false" />

</LinearLayout>
