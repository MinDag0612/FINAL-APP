<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:padding="16dp"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title: A3 • Premium • 1.890.000 ₫ -->
        <TextView
            android:id="@+id/tv_seat_info_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A3"
            android:textSize="18sp"
            android:textStyle="bold"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Zone label -->
        <TextView
            android:id="@+id/tv_seat_info_zone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Khu: Premium"
            android:textSize="14sp" />

        <!-- Price -->
        <TextView
            android:id="@+id/tv_seat_info_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="Giá: 1.890.000 ₫"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Gợi ý -->
        <TextView
            android:id="@+id/tv_seat_info_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nhấn 1 lần để chọn/bỏ chọn ghế này."
            android:textSize="12sp" />

        <!-- Close -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_seat_info_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Đóng" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
