<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="@dimen/spacing_sm">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/bg_timeline_dot" />

        <View
            android:layout_width="2dp"
            android:layout_height="32dp"
            android:layout_marginTop="4dp"
            android:background="@color/color_primary" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_md"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_timeline_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18:00"
            android:textColor="@color/color_on_background"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_timeline_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xs"
            android:text="Check-in &amp; Welcome drink"
            android:textColor="@color/color_on_surface_variant" />
    </LinearLayout>
</LinearLayout>
