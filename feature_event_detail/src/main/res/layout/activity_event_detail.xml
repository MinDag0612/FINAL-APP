<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_event_cover"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:contentDescription="@string/event_detail_default_title"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_event_placeholder" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_lg">

            <TextView
                android:id="@+id/tv_event_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/event_detail_default_title"
                android:textColor="@color/color_on_background"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_event_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:text="@string/event_detail_default_schedule"
                android:textColor="@color/color_primary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_event_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:text="@string/event_detail_default_location"
                android:textColor="@color/color_on_surface_variant" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_md"
                app:singleLine="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_tag_one"
                    style="@style/Widget.Material3.Chip.Suggestion"
                    android:text="@string/event_detail_chip_category_one" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_tag_two"
                    style="@style/Widget.Material3.Chip.Suggestion"
                    android:text="@string/event_detail_chip_category_two" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_tag_three"
                    style="@style/Widget.Material3.Chip.Suggestion"
                    android:text="@string/event_detail_chip_category_three" />
            </com.google.android.material.chip.ChipGroup>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lg"
                app:cardCornerRadius="@dimen/corner_radius_md">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_md">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_general_ticket_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ghế phổ thông"
                            android:textColor="@color/color_on_background"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_general_ticket_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xs"
                            android:text="690.000đ"
                            android:textColor="@color/color_on_surface_variant" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_vip_ticket_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ghế VIP"
                            android:textColor="@color/color_on_background"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_vip_ticket_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_xs"
                            android:text="1.290.000đ"
                            android:textColor="@color/color_on_surface_variant" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tv_intro_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xl"
                android:text="@string/event_detail_intro_title"
                android:textColor="@color/color_on_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_event_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                android:text="@string/event_detail_default_description"
                android:textColor="@color/color_on_surface_variant" />

            <TextView
                android:id="@+id/tv_timeline_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xl"
                android:text="@string/event_detail_timeline_title"
                android:textColor="@color/color_on_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/container_timeline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_md"
                android:orientation="vertical">

                <include
                    android:id="@+id/view_timeline_one"
                    layout="@layout/view_timeline_item" />

                <include
                    android:id="@+id/view_timeline_two"
                    layout="@layout/view_timeline_item" />

                <include
                    android:id="@+id/view_timeline_three"
                    layout="@layout/view_timeline_item" />
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xl"
                app:cardCornerRadius="@dimen/corner_radius_md">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <TextView
                        android:id="@+id/tv_vip_benefit_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/event_detail_vip_title"
                        android:textColor="@color/color_on_background"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_vip_benefit_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="@string/event_detail_vip_benefits"
                        android:textColor="@color/color_on_surface_variant" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_choose_seat"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xl"
                android:text="@string/event_detail_cta"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
