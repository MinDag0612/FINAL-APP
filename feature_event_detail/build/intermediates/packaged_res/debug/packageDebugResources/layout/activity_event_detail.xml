<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_homepage" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66FFFFFF" />

    <!-- Back Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_back_event_detail"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="16dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        app:icon="@drawable/ic_back_arrow"
        app:iconGravity="textStart"
        app:iconPadding="0dp"
        app:iconSize="24dp"
        app:iconTint="#000000"
        app:backgroundTint="#FFFFFF"
        app:cornerRadius="24dp"
        app:elevation="8dp" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_event_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:paddingTop="80dp"
        android:paddingStart="@dimen/spacing_lg"
        android:paddingEnd="@dimen/spacing_lg"
        android:paddingBottom="@dimen/spacing_lg">

            <LinearLayout
                android:id="@+id/layout_event_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/spacing_xxl">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/corner_radius_lg"
                    app:cardUseCompatPadding="true"
                    app:strokeColor="@color/color_outline_variant"
                    app:strokeWidth="1dp">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="240dp">

                        <ImageView
                            android:id="@+id/img_event_cover"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="@string/feature_event_detail_name"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bg_event_placeholder" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_header_scrim" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:orientation="vertical"
                            android:padding="@dimen/spacing_lg">

                            <TextView
                                android:id="@+id/tv_event_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_rating_chip"
                                android:paddingHorizontal="@dimen/spacing_sm"
                                android:paddingVertical="@dimen/spacing_xs"
                                android:text="Innovation"
                                android:textColor="@color/color_primary"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_event_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_sm"
                                android:text="@string/event_detail_default_title"
                                android:textColor="@color/color_on_primary"
                                android:textSize="@dimen/text_size_heading"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_event_schedule"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:text="@string/event_detail_default_schedule"
                                android:textColor="@color/color_on_primary"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tv_event_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:drawablePadding="@dimen/spacing_xs"
                                android:drawableStart="@drawable/ic_location"
                                android:text="@string/event_detail_default_location"
                                android:textColor="@color/color_on_primary" />
                        </LinearLayout>
                    </FrameLayout>
                </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_event_rating_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rating_chip"
                    android:paddingHorizontal="@dimen/spacing_md"
                    android:paddingVertical="@dimen/spacing_xs"
                    android:text="4.8"
                    android:textColor="@color/color_primary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_event_rating_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_sm"
                    android:text="@string/event_detail_review_count_placeholder"
                    android:textColor="@color/color_on_surface_variant" />
            </LinearLayout>
                <TextView
                    style="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:text="@string/event_detail_weather_title" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_weather"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xs"
                    app:cardCornerRadius="@dimen/corner_radius_md"
                    app:strokeColor="@color/color_outline_variant"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/spacing_md">

                        <ImageView
                            android:id="@+id/img_weather_icon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="@string/event_detail_weather_title"
                            android:padding="@dimen/spacing_sm"
                            android:src="@drawable/ic_weather_partly_cloudy" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_md"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_weather_summary"
                                style="@style/TextAppearance.Material3.TitleMedium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nhiều mây, thoáng mát" />

                            <TextView
                                android:id="@+id/tv_weather_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:text="18:30 15/12 - 22:00 15/12"
                                android:textColor="@color/color_on_surface_variant" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_weather_temperature"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="28°C"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_weather_rain_chance"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/spacing_md"
                                    android:text="Khả năng mưa: 40%"
                                    android:textColor="@color/color_on_surface_variant" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_weather_recommendation"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_sm"
                                android:text="Chuẩn bị áo khoác mỏng và đến sớm để chọn vị trí quan sát tốt."
                                android:textColor="@color/color_on_surface_variant" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/tv_weather_unavailable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_xs"
                    android:background="@drawable/bg_detail_glass"
                    android:padding="@dimen/spacing_md"
                    android:text="@string/event_detail_weather_indoor_hint"
                    android:textColor="@color/color_on_surface_variant"
                    android:visibility="gone" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/corner_radius_md"
                app:strokeColor="@color/color_outline_variant"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_clock" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_sm"
                            android:text="@string/event_detail_schedule_title"
                            android:textColor="@color/color_on_background"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_event_cast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:drawablePadding="@dimen/spacing_xs"
                        android:drawableStart="@drawable/ic_people"
                        android:textColor="@color/color_on_surface_variant"
                        android:visibility="gone" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:chipSpacingHorizontal="@dimen/spacing_sm"
                app:chipSpacingVertical="@dimen/spacing_sm" />

            <TextView
                style="@style/TextAppearance.Material3.TitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/event_detail_ticket_section" />

            <LinearLayout
                android:id="@+id/layout_ticket_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_detail_glass"
                android:padding="@dimen/spacing_md" />

            <TextView
                android:id="@+id/tv_ticket_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/event_detail_ticket_empty"
                android:textColor="@color/color_on_surface_variant"
                android:visibility="gone" />

            <TextView
                style="@style/TextAppearance.Material3.TitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/event_detail_intro_title" />

            <TextView
                android:id="@+id/tv_event_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_detail_glass"
                android:padding="@dimen/spacing_md"
                android:text="@string/event_detail_default_description"
                android:textColor="@color/color_on_surface_variant" />

            <TextView
                style="@style/TextAppearance.Material3.TitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/event_detail_timeline_title" />

            <LinearLayout
                android:id="@+id/layout_timeline_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_detail_glass"
                android:padding="@dimen/spacing_md" />

            <TextView
                android:id="@+id/tv_timeline_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/event_detail_timeline_empty"
                android:textColor="@color/color_on_surface_variant"
                android:visibility="gone" />

            <TextView
                style="@style/TextAppearance.Material3.TitleMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/event_detail_reviews_title" />

            <LinearLayout
                android:id="@+id/layout_reviews_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_detail_glass"
                android:padding="@dimen/spacing_md" />

            <TextView
                android:id="@+id/tv_reviews_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/event_detail_reviews_empty"
                android:textColor="@color/color_on_surface_variant"
                android:visibility="gone" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_write_review"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                android:text="@string/event_detail_write_review"
                android:textAllCaps="false" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_choose_seat"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_md"
                android:text="@string/event_detail_cta"
                android:textAllCaps="false" />
        </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/layout_event_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/color_surface"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="@dimen/spacing_md"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_event_error_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_error"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_event_retry"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_xs"
            android:text="@string/event_detail_retry" />
    </LinearLayout>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress_event_detail"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>
