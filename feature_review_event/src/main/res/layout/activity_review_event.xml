<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_background">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_review_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_background"
            android:paddingHorizontal="@dimen/spacing_md"
            app:title="@string/review_event_toolbar_title"
            app:titleTextColor="@color/color_on_background" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_review_event"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/spacing_lg"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/layout_review_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/spacing_xl">

            <TextView
                android:id="@+id/tv_section_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/review_event_section_event"
                android:textColor="@color/color_on_background"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                app:cardCornerRadius="16dp"
                app:cardUseCompatPadding="true"
                app:strokeColor="@color/color_outline_variant"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_md">

                    <TextView
                        android:id="@+id/tv_event_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_on_surface"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="--" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_xs"
                        android:text="@string/review_event_label_schedule"
                        android:textColor="@color/color_outline"
                        android:textSize="@dimen/text_size_subtitle" />

                    <TextView
                        android:id="@+id/tv_event_schedule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_on_surface"
                        android:textSize="@dimen/text_size_subtitle"
                        android:text="--" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:text="@string/review_event_label_location"
                        android:textColor="@color/color_outline"
                        android:textSize="@dimen/text_size_subtitle" />

                    <TextView
                        android:id="@+id/tv_event_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_on_surface"
                        android:textSize="@dimen/text_size_subtitle"
                        android:text="--" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tv_section_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lg"
                android:text="@string/review_event_section_feedback"
                android:textColor="@color/color_on_background"
                android:textSize="@dimen/text_size_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_status_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:textColor="@color/color_outline"
                android:textSize="@dimen/text_size_subtitle"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_rating_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_md"
                android:text="@string/review_event_label_rating"
                android:textColor="@color/color_on_surface"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/rating_event_experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="false"
                android:numStars="5"
                android:stepSize="1.0"
                android:layout_marginTop="@dimen/spacing_xs"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:progressTint="@color/color_primary"
                android:secondaryProgressTint="@color/color_outline_variant"
                android:rating="0" />

            <TextView
                android:id="@+id/tv_rating_placeholder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/review_event_rating_placeholder"
                android:textColor="@color/color_outline"
                android:textSize="@dimen/text_size_subtitle" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/input_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_md"
                android:hint="@string/review_event_label_comment"
                app:helperText="@string/review_event_comment_counter"
                app:counterEnabled="true"
                app:counterMaxLength="400"
                app:helperTextTextColor="@color/color_outline">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edt_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="4"
                    android:gravity="top|start"
                    android:textColor="@color/color_on_surface"
                    android:textSize="@dimen/text_size_subtitle"
                    android:hint="@string/review_event_comment_hint" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_submit_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_lg"
                android:text="@string/review_event_submit"
                android:textAllCaps="false" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress_review_event"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:visibility="gone" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
