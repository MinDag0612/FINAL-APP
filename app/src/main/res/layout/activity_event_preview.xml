<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".EventPreviewActivity">

    <!-- Biểu tượng sự kiện -->
    <ImageView
        android:id="@+id/iv_event_icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_event_preview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/tv_event_name_preview"
        android:contentDescription="Event Icon" />

    <!-- Tên sự kiện -->
    <TextView
        android:id="@+id/tv_event_name_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/tv_prompt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_event_icon"
        tools:text="Tên Sự Kiện Rất Dài Và Hấp Dẫn" />

    <!-- Dòng chữ mời gọi -->
    <TextView
        android:id="@+id/tv_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Đăng nhập để xem chi tiết đầy đủ và mua vé!"
        android:textAppearance="?attr/textAppearanceBody1"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/btn_go_to_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_event_name_preview" />

    <!-- Nút chuyển đến trang đăng nhập -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_go_to_login"
        style="@style/Widget.Material3.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Đăng nhập / Đăng ký"
        app:icon="@drawable/ic_login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_prompt" />

</androidx.constraintlayout.widget.ConstraintLayout>
